<% provide(:title, 'Sign up') %>
<h1>Create a new account</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "What is your name?" %>

      <%= f.label :email %>
      <%= f.text_field :email, :placeholder => "Provide your email address." %>

      <%= f.label :password %>
      <%= f.password_field :password, :placeholder => "Make a password to secure your account." %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, :placeholder => "Please give the password again." %>
        <br>
        <br>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>Already have an account? Let's <%= link_to "Sign in!", signin_path %></p>
  </div>
</div>